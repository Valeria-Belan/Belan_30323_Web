@{
    Layout = "_Layout";
}

<main class="container">
    <h1>Лабораторная работа 1</h1>

    <!-- Список -->
    <h2>Список</h2>
    <ol type="A">
        <li>элемент 0 списка</li>
        <li>элемент 1 списка</li>
        <li>элемент 2 списка</li>
        <li>элемент 3 списка</li>
        <li>элемент 4 списка</li>
    </ol>

    <hr class="custom-line">

    <!-- Форма -->
    <h2>Форма</h2>
    <form method="POST" action="">
        <!-- Чекбоксы -->
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="checkbox1" name="checkbox1">
            <label class="form-check-label" for="checkbox1">Чек-бокс 1</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="checkbox2" name="checkbox2">
            <label class="form-check-label" for="checkbox2">Чек-бокс 2</label>
        </div>

        <!-- Радио-кнопки -->
        <div class="radio-group">
            <label><input type="radio" name="radio" value="1" checked> Радио-1</label>
            <label><input type="radio" name="radio" value="2"> Радио-2</label>
            <label><input type="radio" name="radio" value="3"> Радио-3</label>
        </div>

        <!-- Логин и пароль -->
        <div class="form-container">
            <div>
                <label for="login">Логин:</label>
                <input type="text" id="login" name="login" placeholder="Введите имя">
            </div>
            <div>
                <label for="password">Пароль:</label>
                <input type="password" id="password" name="password" placeholder="Введите пароль">
            </div>
        </div>

        <!-- Кнопка отправки -->
        <button type="submit" class="btn">Отправить</button>
    </form>
</main>    